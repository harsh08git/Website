<%- include('../partials/header.ejs') %>


<div class="container mt-5">
	<h2 style='text-align:center;'>
	Add Campground
	</h2>
	
	<div style='width:30%; margin:20px auto'>
		<form method='POST' action='/campgrounds'>
			<div class='form-group'>
				<input type='text' placeholder='Enter trek name' name='name' class='form-control'>	
			</div>
			<div class='form-group'>
				<input type='text' placeholder='Enter image url' name='image' class='form-control'>			
			</div>
			<div class='form-group'>
				<textarea class='form-control' name='description' rows='3'></textarea>		
			</div>
			<div class='form-group'>
				<input type='number' placeholder='Enter Price' name='price' class='form-control'>			
			</div>
			<div class='form-group'>
				<input type='submit' class='btn btn-primary btn-block'>				
			</div>
		</form>
		<a href='/campgrounds'>Go Back To Campgrounds</a>
	</div>
</div>

<%- include('../partials/footer.ejs') %>
