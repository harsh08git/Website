<%- include('../partials/header.ejs') %>


<div class="container mt-5">
	<h2 style='text-align:center;'>
	EDIT CAMPGROUND - <%=campground.name%>
	</h2>
	
	<div style='width:30%; margin:20px auto'>
		<form method='POST' action='/campgrounds/<%=campground._id%>?_method=PUT' >
			<div class='form-group'>
				<input type='text' name='campground[name]' class='form-control' value='<%=campground.name%>'>	
			</div>
			<div class='form-group'>
				<input type='text' name='campground[image]' class='form-control' value='<%=campground.image%>'>			
			</div>
			<div class='form-group'>
				<textarea class='form-control' name='campground[description]' rows='3'><%=campground.description%></textarea>	
			</div>
			<div class='form-group'>
				<input type='number' name='campground[price]' class='form-control' value='<%=campground.price%>'>			
			</div>
			<div class='form-group'>
				<input type='submit' class='btn btn-primary btn-block'>				
			</div>
		</form>
		<a href='/campgrounds/<%=campground._id%>'>Go Back To Campgrounds</a>
	</div>
</div>

<%- include('../partials/footer.ejs') %>
