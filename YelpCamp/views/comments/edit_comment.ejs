<%- include('../partials/header.ejs') %>


<div class="container mt-5">
	<h2 style='text-align:center;'>
	Edit Comment
	</h2>
	
	<div style='width:30%; margin:20px auto'>
		<form method='POST' action='/campgrounds/<%=campground._id%>/comment/<%= comment._id %>?_method=PUT'>
			<div class='form-group'>
				<textarea class='form-control' name='comment[text]' rows='3'><%= comment.text %></textarea>		
			</div>
			<div class='form-group'>
				<input type='submit' class='btn btn-primary btn-block'>				
			</div>
		</form>
		<a href='/campgrounds/<%=campground._id%>'>Go Back To Campgrounds</a>
	</div>
</div>

<%- include('../partials/footer.ejs') %>